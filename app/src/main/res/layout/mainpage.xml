<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:background="@drawable/header_round"
            android:text="스마트 멀티탭"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="30dp"
            android:gravity="center"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_gravity="center"
        >
        <Spinner
            android:layout_width="220dp"
            android:layout_height="50dp"
            android:id="@+id/spinner"
            android:spinnerMode="dropdown"
            android:textColor="@color/black"
            android:background="@drawable/spinner_style"
            android:layout_gravity="center"
            />
    </LinearLayout>

    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="60dp"
        android:columnCount="2"
        android:orientation="horizontal"
        android:rowCount="1"
        >

        <GridLayout
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_row="0"
            android:layout_column="0"
            android:layout_columnWeight="1"
            android:layout_gravity="center"
            android:layout_marginRight="40dp"
            android:background="@drawable/mainbt_round"
            android:columnCount="1"
            android:padding="10dp"
            android:rowCount="2"
            >

            <ImageButton
                android:id="@+id/btn1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@android:color/transparent"
                android:src="@drawable/power_white"
                android:textColor="@color/black"
                android:textSize="20dp"
                android:textStyle="bold"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="전원 관리"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:textStyle="bold" />

        </GridLayout>

        <GridLayout
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_columnWeight="1"
            android:layout_gravity="center"
            android:background="@drawable/mainbt_round"
            android:columnCount="1"
            android:padding="10dp"
            android:rowCount="2">

            <ImageButton
                android:id="@+id/btn2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@android:color/transparent"
                android:src="@drawable/whiteicon"
                android:textColor="@color/black"
                android:textSize="20dp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="전력 관리"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:textStyle="bold" />

        </GridLayout>
    </GridLayout>

    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:layout_gravity="center"
        android:orientation="horizontal"
        android:rowCount="1"
        android:columnCount="2">

        <GridLayout
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_row="0"
            android:layout_column="0"
            android:layout_gravity="center"
            android:background="@drawable/mainbt_round"
            android:columnCount="1"
            android:padding="10dp"
            android:rowCount="2"
            android:layout_columnWeight="1"
            android:layout_marginRight="40dp">

            <ImageButton
                android:id="@+id/btn3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@android:color/transparent"
                android:src="@drawable/reserve_white"
                android:text="멀티탭 제어"
                android:textColor="@color/black"
                android:textSize="20dp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="전원 예약"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:textStyle="bold" />

        </GridLayout>

        <GridLayout
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:columnCount="1"
            android:rowCount="2"
            android:background="@drawable/mainbt_round"
            android:padding="10dp"
            android:layout_gravity="center"
            android:layout_columnWeight="1"
            >
            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:textStyle="bold"
                android:src="@drawable/anal_white"
                android:background="@android:color/transparent"
                android:id="@+id/btn4"
                android:layout_gravity="center"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="데이터 룸"
                android:textSize="20sp"
                android:textColor="@color/white"
                android:layout_gravity="center"
                android:textStyle="bold"/>

        </GridLayout>
    </GridLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/bottom_round"
        android:layout_weight="1"
        android:padding="20dp"
        android:layout_marginTop="80dp"
        >

        <ImageView
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:src="@drawable/mokwon"
            android:layout_gravity="center"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="목원대학교 졸업작품"
            android:textColor="@color/black"
            android:layout_gravity="center"
            android:textSize="30dp"
            android:textStyle="bold"/>

    </LinearLayout>


</LinearLayout>